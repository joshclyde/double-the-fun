{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "*": [ "./*" ],
        "src/*": ["./src/*"]
    },
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "types": ["node", "webdriverio", "mocha"]
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
